            <div class="mt-4">
                {{#if usuario.eAdmin}}
                    <input class="form-check-input" type="checkbox" id="eAdmin" name="eAdmin" checked/>
                {{else}}
                    <input class="form-check-input" type="checkbox" id="eAdmin" name="eAdmin"/> 
                {{/if}}
                <label for="form-check-label" class="form-check-label">Admin</label>
            </div>
            <button type="submit" class="btn btn-success mt-4">Editar Usuario</buton>
        </form>
    </div>
</div>