<h2>Postagens sobre {{categoria.nome}}:</h2>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body"> 
            <h3>{{titulo}}</h3>
            <p>{{conteudo}}</p>
            <a href="/postagem/{{slug}}"><button class="btn-success">Leia mais</button></a>
            <hr>
            <small>Publicado em: {{data}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}